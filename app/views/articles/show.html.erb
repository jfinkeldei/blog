<h1><%= @article.title %></h1>

<p><%= @article.body%></p>

<% if current_user %>
  <ul>


    <li><%= link_to "Edit", edit_article_path(@article) %></li>
    <li><%= link_to "Destroy", article_path(@article),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %></li>
  </ul>
<% end %>

<h2>Comments</h2>
<%= render @article.comments %>

<% if current_user %>
  <h2>Add a comment:</h2>
  <%= render 'comments/form' %>
<% else %>
  <p>
    Log in to add a comment
  </p>
<% end%>
